Server1 = spawn('serv@192.168.43.237', ticTacToeServer, loop_main, [db:new()]).
Room1 = spawn('serv@192.168.43.237', ticTacToeServer, loop_room, [db:new(), db:new(), -1]).
global:register_name(ticTacToeServer, Server1).
global:register_name(komnata1, Room1).

%% Клиент 1
net_adm:ping('serv@192.168.43.237').

%% Клиент 2
net_adm:ping('serv@192.168.43.237').

%% Клиент 1
Client1 = spawn('h1@192.168.43.237', ticTacToeClient, loop_main, []).
ticTacToeClient:enter_room(komnata1, Client1, "vasya").

%% Клиент 2
Client2 = spawn('h2@192.168.43.237', ticTacToeClient, loop_main, []).
